---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Settings - PKM Bridge">
    <!-- Header bar matching main app style -->
    <div class="settings-header">
        <a href="/" class="back-button" title="Back to Chat">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span>Back to Chat</span>
        </a>
        <h1>Settings</h1>
    </div>

    <div class="settings-container">

        <section class="user-context-section">
            <h2>User Context</h2>
            <p class="section-description">
                Tell Claude about yourself. This information helps Claude provide more personalized and relevant responses.
            </p>

            <div class="context-editor">
                <textarea
                    id="user-context-textarea"
                    class="context-textarea"
                    rows="12"
                    placeholder="Enter information about yourself, your work, interests, etc..."
                ></textarea>

                <div class="editor-actions">
                    <span id="context-status" class="status-text"></span>
                    <div class="button-group">
                        <button id="cancel-context-btn" class="btn btn-secondary" style="display: none;">
                            Cancel
                        </button>
                        <button id="save-context-btn" class="btn btn-primary">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <section class="editor-autosave-section">
            <h2>Editor Auto-Save</h2>
            <p class="section-description">
                Automatically save your changes while editing files in the editor.
            </p>

            <div class="autosave-settings">
                <div class="setting-item">
                    <label class="toggle-label">
                        <input type="checkbox" id="auto-save-toggle" class="toggle-input">
                        <span class="toggle-slider"></span>
                        <span class="toggle-text">Enable auto-save</span>
                    </label>
                    <p class="setting-description">
                        Automatically save changes after you stop typing. Conflicts with remote file changes will be detected.
                    </p>
                </div>

                <div id="auto-save-delay-setting" class="setting-item" style="display: none;">
                    <label class="setting-label">Auto-save delay:</label>
                    <select id="auto-save-delay" class="setting-select">
                        <option value="1000">1 second</option>
                        <option value="2000" selected>2 seconds</option>
                        <option value="3000">3 seconds</option>
                        <option value="5000">5 seconds</option>
                        <option value="10000">10 seconds</option>
                    </select>
                    <p class="setting-description">
                        How long to wait after you stop typing before saving.
                    </p>
                </div>
            </div>
        </section>

        <section class="integrations-section">
            <h2>Integrations</h2>

            <div class="integration-card">
                <div class="integration-header">
                    <h3>TickTick</h3>
                    <span id="ticktick-status" class="status-badge">Checking...</span>
                </div>
                <p>Connect your TickTick account to let Claude manage your tasks.</p>

                <div id="ticktick-actions">
                    <button id="connect-ticktick" class="btn btn-primary" style="display: none;">
                        Connect TickTick
                    </button>
                    <button id="disconnect-ticktick" class="btn btn-danger" style="display: none;">
                        Disconnect
                    </button>
                </div>
            </div>

            <div class="integration-card">
                <div class="integration-header">
                    <h3>Google Calendar</h3>
                    <span id="google-calendar-status" class="status-badge">Checking...</span>
                </div>
                <p>Connect your Google Calendar to let Claude manage your events and schedule.</p>

                <div id="google-calendar-actions">
                    <button id="connect-google-calendar" class="btn btn-primary" style="display: none;">
                        Connect Google Calendar
                    </button>
                    <button id="disconnect-google-calendar" class="btn btn-danger" style="display: none;">
                        Disconnect
                    </button>
                </div>
            </div>

            <div class="integration-card">
                <div class="integration-header">
                    <h3>Gmail</h3>
                    <span id="gmail-status" class="status-badge">Checking...</span>
                </div>
                <p>Connect Gmail to let Claude search and read your email (read-only).</p>

                <div id="gmail-actions">
                    <button id="connect-gmail" class="btn btn-primary" style="display: none;">
                        Connect Gmail
                    </button>
                    <button id="disconnect-gmail" class="btn btn-danger" style="display: none;">
                        Disconnect
                    </button>
                </div>
            </div>
        </section>

        <section class="scheduled-tasks-section">
            <h2>Scheduled Tasks</h2>
            <p class="section-description">
                Configure tasks that run automatically on a schedule. Claude executes each task with access to your tools.
            </p>

            <!-- Daily Budget Bar -->
            <div class="budget-card" id="budget-card">
                <div class="budget-header">
                    <span class="budget-label">Daily Token Budget</span>
                    <span id="budget-summary" class="budget-summary">Loading...</span>
                </div>
                <div class="budget-bar-container">
                    <div class="budget-bar">
                        <div id="budget-bar-fill" class="budget-bar-fill" style="width: 0%"></div>
                    </div>
                </div>
                <div class="budget-details">
                    <span id="budget-input">Input: —</span>
                    <span id="budget-output">Output: —</span>
                    <span id="budget-runs">Runs: —</span>
                </div>
            </div>

            <!-- Task List -->
            <div id="task-list" class="task-list">
                <p class="loading-text">Loading tasks...</p>
            </div>

            <!-- Add Task Button + Form -->
            <button id="add-task-btn" class="btn btn-primary" style="margin-top: 1rem;">
                + Add Task
            </button>

            <div id="add-task-form" class="task-form" style="display: none;">
                <h3>New Scheduled Task</h3>
                <div class="form-group">
                    <label for="new-task-name">Name</label>
                    <input type="text" id="new-task-name" placeholder="e.g. morning-calendar-check" class="form-input">
                </div>
                <div class="form-group">
                    <label for="new-task-prompt">Prompt</label>
                    <textarea id="new-task-prompt" rows="4" placeholder="What should Claude do when this task runs?" class="form-input"></textarea>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="new-task-schedule-type">Schedule Type</label>
                        <select id="new-task-schedule-type" class="form-input">
                            <option value="cron">Cron</option>
                            <option value="interval">Interval</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="new-task-schedule-expr">Expression</label>
                        <input type="text" id="new-task-schedule-expr" placeholder="0 9 * * 1-5 or 4h" class="form-input">
                    </div>
                </div>
                <details class="form-advanced">
                    <summary>Advanced</summary>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="new-task-max-turns">Max Turns</label>
                            <input type="number" id="new-task-max-turns" value="10" class="form-input">
                        </div>
                        <div class="form-group">
                            <label for="new-task-max-input">Max Input Tokens</label>
                            <input type="number" id="new-task-max-input" value="200000" class="form-input">
                        </div>
                        <div class="form-group">
                            <label for="new-task-max-output">Max Output Tokens</label>
                            <input type="number" id="new-task-max-output" value="10000" class="form-input">
                        </div>
                    </div>
                </details>
                <div class="form-actions">
                    <button id="cancel-task-btn" class="btn btn-secondary">Cancel</button>
                    <button id="save-task-btn" class="btn btn-primary">Create Task</button>
                </div>
                <span id="task-form-status" class="status-text"></span>
            </div>

            <!-- Recent Runs -->
            <details class="recent-runs-section" style="margin-top: 1.5rem;">
                <summary><strong>Recent Runs</strong></summary>
                <div id="recent-runs" class="recent-runs">
                    <p class="loading-text">Loading...</p>
                </div>
            </details>
        </section>

        <section class="account-section">
            <h2>Account</h2>
            <button id="logout-btn" class="btn btn-danger">
                Logout
            </button>
        </section>

        <section class="version-section">
            <h2>Version</h2>
            <div class="version-info">
                <div class="version-item">
                    <span class="version-label">Build:</span>
                    <span id="build-version" class="version-value">Loading...</span>
                </div>
            </div>
        </section>

    </div>
</Layout>

